<%= form_with model: address,
              url: address.persisted? ? address_path(address, locale: I18n.locale) :
                     addresses_path(locale: I18n.locale),
              method: address.persisted? ? :patch : :post,
              local: true do |f| %>

  <div class="row mb-3">
    <div class="col-md-4">
      <%= f.label :country, t('addresses.form.country'), class: "form-label" %>
      <%= f.text_field :country, class: "form-control bg-dark text-white border-secondary" %>
    </div>
    <div class="col-md-4">
      <%= f.label :city, t('addresses.form.city'), class: "form-label" %>
      <%= f.text_field :city, class: "form-control bg-dark text-white border-secondary" %>
    </div>
    <div class="col-md-4">
      <%= f.label :street, t('addresses.form.street'), class: "form-label" %>
      <%= f.text_field :street, class: "form-control bg-dark text-white border-secondary" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">
      <%= f.label :house, t('addresses.form.house'), class: "form-label" %>
      <%= f.text_field :house, class: "form-control bg-dark text-white border-secondary" %>
    </div>
    <div class="col-md-3">
      <%= f.label :building, t('addresses.form.building'), class: "form-label" %>
      <%= f.text_field :building, class: "form-control bg-dark text-white border-secondary" %>
    </div>
    <div class="col-md-3">
      <%= f.label :entrance, t('addresses.form.entrance'), class: "form-label" %>
      <%= f.text_field :entrance, class: "form-control bg-dark text-white border-secondary" %>
    </div>
    <div class="col-md-3">
      <%= f.label :apartment, t('addresses.form.apartment'), class: "form-label" %>
      <%= f.text_field :apartment, class: "form-control bg-dark text-white border-secondary" %>
    </div>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :is_default,
                    class: "form-check-input",
                    id: "address_is_default_#{address.object_id}" %>
    <%= f.label :is_default,
                t('addresses.form.is_default'),
                class: "form-check-label",
                for: "address_is_default_#{address.object_id}" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit t('addresses.form.save'),
                 class: "btn btn-orange px-4" %>
  </div>
<% end %>
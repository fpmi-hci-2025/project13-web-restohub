<div class="container py-4 text-white profile-page">
  <div class="d-flex justify-content-center mb-4">
    <h2 class="profile-title text-center mb-0">
      <%= t('profile.edit_title') %>
    </h2>
  </div>

  <div class="card bg-dark border-0 rounded-4 p-4">
    <%= form_with model: @user,
                  url: profile_path(locale: I18n.locale),
                  method: :patch,
                  local: true do |f| %>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :login, t('profile.form.login'), class: "form-label" %>
          <%= f.text_field :login,
                           class: "form-control bg-dark text-white border-secondary",
                           placeholder: t('profile.form.login_placeholder') %>
        </div>
        <div class="col-md-6">
          <%= f.label :avatar, t('profile.form.avatar'), class: "form-label" %>
          <%= f.file_field :avatar, class: "form-control bg-dark text-white border-secondary" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :first_name, t('profile.form.first_name'), class: "form-label" %>
          <%= f.text_field :first_name,
                           class: "form-control bg-dark text-white border-secondary",
                           placeholder: t('profile.form.first_name_placeholder') %>
        </div>
        <div class="col-md-6">
          <%= f.label :last_name, t('profile.form.last_name'), class: "form-label" %>
          <%= f.text_field :last_name,
                           class: "form-control bg-dark text-white border-secondary",
                           placeholder: t('profile.form.last_name_placeholder') %>
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to t('profile.form.back'),
                    profile_path(locale: I18n.locale),
                    class: "btn btn-outline-secondary" %>

        <%= f.submit t('profile.form.save'),
                     class: "btn btn-orange px-4" %>
      </div>
    <% end %>
  </div>
</div>

<div class="auth-wrapper">
  <div class="auth-card">
    <div class="auth-brand">
      <div class="auth-brand-title">RestoHUB</div>
    </div>

    <h2 class="auth-title">
      <%= t('devise.passwords.title') %>
    </h2>

    <% if resource.errors.any? %>
      <div class="auth-error-box">
        <% resource.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.passwords.email') %></label>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "form-control auth-input",
                          placeholder: t('devise.passwords.email_placeholder') %>
        <% resource.errors.full_messages_for(:email).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <%= f.submit t('devise.passwords.submit'),
                   class: "btn auth-submit-btn mt-3" %>
    <% end %>

    <div class="auth-footer-text">
      <%= link_to t('devise.passwords.back_to_login'), new_user_session_path, class: "link-light" %>
    </div>
  </div>
</div>
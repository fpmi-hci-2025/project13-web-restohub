<div class="auth-wrapper">
  <div class="auth-card">
    <div class="auth-brand">
      <div class="auth-brand-title">RestoHUB</div>
    </div>

    <h2 class="auth-title">
      <%= t('devise.registrations.title') %>
    </h2>

    <% if resource.errors.any? %>
      <div class="auth-error-box">
        <% resource.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>
      </div>
    <% end %>

    <div class="auth-subtoggle-row">
      <button type="button" class="auth-subtoggle-btn auth-subtoggle-btn--active">
        <%= t('devise.common.email_tab') %>
      </button>
      <button type="button" class="auth-subtoggle-btn" disabled>
        <%= t('devise.common.phone_tab') %>
      </button>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.registrations.first_name') %></label>
        <%= f.text_field :first_name,
                         autofocus: true,
                         class: "form-control auth-input",
                         placeholder: t('devise.registrations.first_name_placeholder') %>
        <% resource.errors.full_messages_for(:first_name).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.registrations.last_name') %></label>
        <%= f.text_field :last_name,
                         class: "form-control auth-input",
                         placeholder: t('devise.registrations.last_name_placeholder') %>
        <% resource.errors.full_messages_for(:last_name).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.registrations.nickname') %></label>
        <%= f.text_field :nickname,
                         class: "form-control auth-input",
                         placeholder: t('devise.registrations.nickname_placeholder') %>
        <% resource.errors.full_messages_for(:nickname).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.registrations.email') %></label>
        <%= f.email_field :email,
                          class: "form-control auth-input",
                          autocomplete: "email",
                          placeholder: t('devise.registrations.email_placeholder') %>
        <% resource.errors.full_messages_for(:email).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.registrations.phone') %></label>
        <%= f.text_field :phone,
                         class: "form-control auth-input",
                         placeholder: t('devise.registrations.phone_placeholder') %>
        <% resource.errors.full_messages_for(:phone).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.registrations.password') %></label>
        <%= f.password_field :password,
                             autocomplete: "new-password",
                             class: "form-control auth-input" %>
        <div class="text-muted mt-1" style="font-size: 0.8rem;">
          <%= t('devise.registrations.password_hint') %>
        </div>
        <% resource.errors.full_messages_for(:password).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-field-group">
        <label class="auth-label"><%= t('devise.registrations.password_confirmation') %></label>
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "form-control auth-input" %>
        <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <%= f.submit t('devise.registrations.submit'),
                   class: "btn auth-submit-btn mt-3" %>
    <% end %>

    <div class="auth-footer-text">
      <%= t('devise.registrations.already_have_account') %>
      <%= link_to t('devise.sessions.sign_in_link'), new_user_session_path, class: "link-light" %>
    </div>
  </div>
</div>
<div class="auth-wrapper">
  <div class="auth-card">
    <div class="auth-brand">
      <div class="auth-brand-title">RestoHUB</div>
    </div>

    <h2 class="auth-title">
      <%= t('devise.sessions.title') %>
    </h2>

    <% if resource.errors.any? %>
      <div class="auth-error-box">
        <% resource.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>
      </div>
    <% end %>

    <div class="auth-subtoggle-row">
      <button type="button" class="auth-subtoggle-btn auth-subtoggle-btn--active">
        <%= t('devise.common.email_tab') %>
      </button>
      <button type="button" class="auth-subtoggle-btn" disabled>
        <%= t('devise.common.phone_tab') %>
      </button>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="auth-field-group">
        <label class="auth-label">
          <%= t('devise.sessions.login_label') %>
        </label>
        <%= f.text_field :login,
                         autofocus: true,
                         autocomplete: "email",
                         class: "form-control auth-input",
                         placeholder: t('devise.sessions.login_placeholder') %>
        <% resource.errors.full_messages_for(:login).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-field-group">
        <label class="auth-label">
          <%= t('devise.sessions.password') %>
        </label>
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             class: "form-control auth-input" %>
        <% resource.errors.full_messages_for(:password).each do |msg| %>
          <div class="auth-field-error"><%= msg %></div>
        <% end %>
      </div>

      <div class="auth-help-row">
        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me, class: "form-check-input me-1" %>
            <span><%= t('devise.sessions.remember_me') %></span>
          </div>
        <% end %>

        <% if devise_mapping.recoverable? %>
          <%= link_to t('devise.sessions.forgot'),
                      new_password_path(resource_name),
                      class: "link-light link-underline-opacity-0" %>
        <% end %>
      </div>

      <%= f.submit t('devise.sessions.submit'),
                   class: "btn auth-submit-btn mt-1" %>
    <% end %>

    <div class="auth-footer-text">
      <%= t('devise.sessions.no_account') %>
      <%= link_to t('devise.sessions.sign_up_link'), new_user_registration_path, class: "link-light" %>
    </div>
  </div>
</div>